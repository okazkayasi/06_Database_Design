<!DOCTYPE html>
<html>
  <head>
    <title>GT Bay | <%=title %></title>
    <% include ./partials/head %>	
  </head>
  
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <% include ./partials/header %>
      <% include ./partials/side %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
            <li class="active"><%=title %></li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            
            <div class="row">
              <div class="row">&nbsp;</div>
                
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">
                
                  <!-- Horizontal Form -->
                  <div class="box box-info">
                    <div class="box-header with-border">
                      <h3 class="box-title"><%=title%></h3>
                    </div>
                    <!-- /.box-header -->
                    
                    <div class="register-box-body">                   
                    <% if (messages[0]) { %>
                      <div class="callout callout-danger">
                        <h4><i class="fa fa-warning"></i> Errors:</h4>
                        <% for(var i in messages) { %>
                          <div class="flash"><%= messages[i] %></div>
                        <% } %>
                      </div>
                    <% } %> 
                    <!-- form start -->
                    <form class="form-horizontal" action="/item/auction" method="post">
                      <input type="hidden" name="itemId" value="<%=itemId%>">
                      <div class="box-body">      
                    <% if (itemId == '') {%>
                        <div class="form-group has-feedback">
                          <label for="inputItemName" class="col-sm-3 control-label">Item Name</label>                        
                          <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputItemName" placeholder="Enter Item Name" name="itemName" value="">
                          </div>
                        </div>
                    <% } %>
                        <div class="form-group has-feedback">
                          <label for="textareaDescription" class="col-sm-3 control-label">Description</label>
                          <div class="col-sm-9">
                            <textarea class="form-control" rows="3" id="textareaDescription" placeholder="Enter Description" name="description"><%=description %></textarea>
                          </div>
                        </div>
                    <% if (itemId == '') {%>
                        <div class="form-group has-feedback">
                          <label for="inputCategory" class="col-sm-3 control-label">Category</label>
                          <div class="col-sm-9">
                              <select type="text" class="form-control" id="inputCategory" name="category">
                            <% for(var i = 0; i < categories.length; i++) { %>
                                <option value="<%=categories[i].Category_Name %>"><%=categories[i].Category_Name %></option>
                            <% } %>
                              </select>
                          </div>
                        </div>
                        <div class="form-group has-feedback">
                          <label for="selectCondition" class="col-sm-3 control-label">Condition</label>
                          <div class="col-sm-9">
                              <select type="text" class="form-control" id="selectCondition" name="condition">
                                <option value="5" >New</option>
                                <option value="4" >Very Good</option>
                                <option value="3" >Good</option>
                                <option value="2" >Fair</option>
                                <option value="1" >Poor</option>
                              </select>
                          </div>
                        </div>
                        <div class="form-group has-feedback">
                          <label for="inputStartingBid" class="col-sm-3 control-label">Start auction bidding at</label>
                          <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                                <input type="text" class="form-control" id="inputStartingBid" placeholder="35.00" name="startingBid" value="">
                            </div>                            
                          </div>
                        </div>
                        <div class="form-group has-feedback">
                          <label for="inputMinSalePrice" class="col-sm-3 control-label">Minimum sale price</label>
                          <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                                <input type="text" class="form-control" id="inputMinSalePrice" placeholder="60.00" name="minSalePrice" value="">
                            </div>
                          </div>
                        </div>
                        <div class="form-group has-feedback">
                          <label for="inputAuctionLength" class="col-sm-3 control-label">Auction ends in</label>
                          <div class="col-sm-9">
                            <select type="text" class="form-control" id="inputAuctionLength" name="auctionLength">
                                <option value="1" >1 day</option>
                                <option value="3" >3 days</option>
                                <option value="5" >5 days</option>
                                <option value="7" >7 days</option>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="inputGetItNowPrice" class="col-sm-3 control-label">(optional) Get It Now price</label>
                          <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                                <input type="text" class="form-control" id="inputGetItNowPrice" placeholder="79.00" name="getItNowPrice" value="">
                              </div>                            
                          </div>                    
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                              <label>
                                <input type="checkbox" name="returnable" value="true"> Returns Accepted?
                              </label>
                            </div>
                          </div>
                        </div>
                    <% } %>
                      </div>
                      <!-- /.box-body -->
                      <div class="box-footer">
                        <button type="button" onClick="window.location.href='/item/sale?id=<%=itemId%>'" class="btn btn-default" on>Go Back</button>
                        <button type="submit" class="btn btn-info pull-right" id='registerBtn'><% if (itemId == '') {%>List My Item<% } else {%>Update<%}%></button>
                      </div>
                      <!-- /.box-footer -->
                    </form>
                    </div>
                  </div>
                  <!-- /.box -->
        
            </section><!-- /.Left col -->
            
          </div><!-- /.row -->
            
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

      <% include ./partials/footer %>
      
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->

	<!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 2.1.4 -->
    <script src="/static/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- AdminLTE App -->
    <script src="/static/js/app.min.js"></script>

    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. Slimscroll is required when using the
         fixed layout. -->
	  
	<!-- page script -->
	<% include ./partials/define %>	
    <script>
    
    var sessionTimeRemaining = <%=sessionTimeOutDuration %>;
    </script>    
	<% include ./partials/bottom %>		
  </body>
</html>
